<!--pages/map/map.wxml-->
<map id="myMap" markers="{{markers}}"   latitude="{{latitude}}" longitude="{{longitude}}" 
scale='14' show-location  circles="{{circles}}"  polyline="{{polyline}}"  bindmarkertap='bindmarkertap'   bindpoitap="bindpoitap" 
>
</map>

<view class='ser-con'>
  <form bindsubmit="searchNearby" >
    <input class='inp' type='text' placeholder='搜地点' value='{{keysValue}}' name='keysValue'></input>
    <button class='btn'  form-type="submit" >搜索周边</button>
  </form>
</view>

<view class='line-tip'>先输入(如：KFC)-搜索：会出现点，点中其中一个出现的点，然后可以选择出行方式，点击路线规划：</view>
<view class='line-planning'>
  <view class='sel-way'>
    <picker class='picker' bindchange="selGoWay" value="{{goWayIndex}}" range="{{goWayArr}}" range-key='title'>
      <view class="ti">选择出行方式：<label class='mm'>{{goWayArr[goWayIndex].title}}</label></view>
    </picker>
  </view>
  <button type='button' class='btn'  bindtap="linePlanning">路线规划</button>
</view>