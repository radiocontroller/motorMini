/* pages/map/map.wxss */
page{ background-color: #000;}
#myMap{ width:100%; height:600rpx;}

.ser-con{ width: 100%;  height: 80rpx;  padding: 0 30rpx; box-sizing: border-box;  margin: 30rpx 0;}
.ser-con .btn{ width:30%; height: 80rpx; line-height: 80rpx; font-size: 28rpx; border-radius: 0; 
background-color: #fff; float: right;}
.ser-con .inp{ width:70%; height: 80rpx; padding: 0 15rpx; box-sizing: border-box; font-size: 28rpx; 
 background-color:#f0f0f0;  float: left;}

.line-tip{ width: 100%; padding: 20rpx; box-sizing: border-box; color: #fff; font-size: 24rpx;}
.line-planning{ width: 100%; height: 80rpx; padding: 0 30rpx; box-sizing: border-box;}
.line-planning .sel-way{ width: 65%; float: left; }
.line-planning .sel-way .picker{ line-height: 80rpx; background-color: #fff; padding: 0 20rpx; font-size: 28rpx; }
.line-planning .sel-way .picker .mm{ color: rgba(153, 0, 255, 0.699);}
.line-planning .btn{ width: 30%; height: 80rpx; line-height: 80rpx; font-size: 28rpx; float: right;}  

.address-container{width: 100%; height: auto; overflow: hidden; margin-top: 30rpx;}
.address-thead{ width: 100%; height:80rpx; line-height: 80rpx; padding: 0 20rpx; box-sizing: border-box; color:#fff; 
font-size: 28rpx; border-bottom: 1px solid #f0f0f0; background-color: rgb(93, 147, 248); }
.address-list{ width: 100%; padding:0 30rpx; background-color: #fff;  box-sizing: border-box; }
.address-list .mod{ min-height: 100rpx; padding: 20rpx; border-bottom: 1px solid #f0f0f0; position: relative; }
.address-list .mod:last-of-type{ border-bottom: none;}
.address-list .mod .th{ width: 100%; font-size: 28rpx; color: #333; margin-bottom: 20rpx;}
.address-list .mod .des{ min-height:80rpx;  font-size: 24rpx; color: #666;}
.address-list .mod .dist{ position: absolute; right: 20rpx; bottom:20rpx; font-size: 22rpx; color: #999;}
.address-list .mod .dura{ position: absolute; right: 20rpx; top:20rpx; font-size: 22rpx; color: #999;}

.pio-head{background-color: rgb(247, 90, 63); }
.pio-address .mod .des{ min-height: auto;}
